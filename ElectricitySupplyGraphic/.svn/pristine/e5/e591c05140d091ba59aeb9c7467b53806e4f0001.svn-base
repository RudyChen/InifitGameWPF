        Point? mouseLeftButtonDownPoint = null;

        Line tempLine = null;
        Polyline tempLLinePolyline = null;
        Label tempLabel = null;
        ToggleButton tempToggleButton = null;
        FrameworkElement selectedUIElement = null;
        TextBox nameInputTextBox = null;

